Actor OE2SmallTent: BaseDecoration {
	Health 20
	+SOLID
	+SHOOTABLE

	States {
	Spawn:
		TENT A -1
		Stop
	Death:
		TENT A 2
		TENT A 1 A_NoBlocking
		TENT B -1
		Stop
	}
}

