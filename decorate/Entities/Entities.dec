Actor OE2Fog: BaseDecoration {
	+NOGRAVITY
    +FORCEXYBILLBOARD

    Alpha 0.75
	RenderStyle "Add"

	States {
	Spawn:
		AFOG A 3 A_SetTranslucent( clamp( alpha + FRandom( -0.05, 0.05 ), 0.55, 0.99 ), 1 )
		Loop
	}
}

Actor OE2VioletFog: OE2Fog {
	States {
	Spawn:
		AFOG B 3 A_SetTranslucent( clamp( alpha + FRandom( -0.05, 0.05 ), 0.55, 0.99 ), 1 )
		Loop
	}
}
